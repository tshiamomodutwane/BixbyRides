<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#82086EDE">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/wallpaper"
        android:scaleType="centerCrop"
        android:contentDescription="@string/wallpaper" />

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to BixbyRides"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_below="@id/backgroundImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <!-- Outline Sign In Button -->
    <Button
        android:id="@+id/signInButtonOutline"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Sign In"
        android:textColor="#000000"
        android:backgroundTint="@color/material_dynamic_neutral80"
        android:layout_below="@id/welcomeText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <!-- Filled Sign Up Button -->
    <Button
        android:id="@+id/signUpButtonFilled"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Sign Up"
        android:textColor="#FFFFFF"
        android:backgroundTint="#0B3D9C"
        android:layout_below="@id/signInButtonOutline"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>
